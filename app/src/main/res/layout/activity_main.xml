<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/flashcardQuestion"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="30dp"
        android:text="Question"
        android:background="@drawable/answer_background"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:elevation="10dp"
        android:textSize="40sp"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/flashcardAnswer"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="30dp"
        android:visibility="invisible"
        android:text="Answer"
        android:background="@drawable/question_background"
        android:elevation="10dp"
        android:textSize="40sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textAlignment="center" />
    
    <TextView
        android:id="@+id/flashcardAnswer1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Option 1"
        android:background="@color/answerOutline"
        android:textSize="30sp"
        android:elevation="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_above="@+id/flashcardAnswer2"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/flashcardAnswer2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Option 2"
        android:background="@color/answerOutline"
        android:textSize="30sp"
        android:elevation="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_above="@+id/flashcardAnswer3"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/flashcardAnswer3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Option 3"
        android:background="@color/answerOutline"
        android:textSize="30sp"
        android:elevation="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textAlignment="center"/>

    <ImageView
        android:id="@+id/plus_icon"
        android:src="@drawable/plus_icon_foreground"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true" />

    <ImageView
        android:id="@+id/edit_icon"
        android:src="@drawable/edit_icon_foreground"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:textSize="40dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_below="@+id/flashcardQuestion"
        />

    <ImageView
        android:id="@+id/next_icon"
        android:src="@drawable/next_icon_foreground"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/flashcardQuestion"/>

    <ImageView
        android:id="@+id/back_icon"
        android:src="@drawable/next_icon_foreground"
        android:rotation="180"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/flashcardQuestion"/>

    <ImageView
        android:id="@+id/delete_icon"
        android:src="@drawable/delete_icon_foreground"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:layout_toLeftOf="@+id/plus_icon"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"/>

    <ImageView
        android:id="@+id/shuffle_icon"
        android:src="@drawable/shuffle_icon_foreground"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@+id/edit_icon"
        android:layout_alignParentBottom="true" />

</RelativeLayout>